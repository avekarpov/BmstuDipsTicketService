        },
        {
            "name": "bonus service",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/python/services",
            "program": "bonus.py",
            "console": "integratedTerminal",
            "args":
            [
                "--db-user", "program",
                "--db-password", "program_password",
                "--db", "bonus",
